<script>
function modifyPageContents(arr) {
    var tab, tr, td, tn, row, col;
    var moneyArr = [];

    tab = document.getElementsByTagName('table')[0];

    tr = document.createElement('tr');
    td = document.createElement('td');
    tn = document.createTextNode('Email');
    td.appendChild(tn);
    tr.appendChild(td);
    td = document.createElement('td');
    tn = document.createTextNode('Bet Type');
    td.appendChild(tn);
    tr.appendChild(td);
    td = document.createElement('td');
    tn = document.createTextNode('Winner');
    td.appendChild(tn);
    tr.appendChild(td);
    td = document.createElement('td');
    tn = document.createTextNode('Status');
    td.appendChild(tn);
    tr.appendChild(td);
    td = document.createElement('td');
    tn = document.createTextNode('Money Bet');
    td.appendChild(tn);
    tr.appendChild(td);
    td = document.createElement('td');
    tn = document.createTextNode('Money Result');
    td.appendChild(tn);
    tr.appendChild(td);

    tab.appendChild(tr);





    tab.innerHTML = "";
    for (row = 0; row < arr.length; row++)
    {
        tr = document.createElement('tr');
        for (col = 0; col < arr[row].length - 1; col++) 
        {
            td = document.createElement('td');
            tn = document.createTextNode(arr[row][col]);
            td.appendChild(tn);
            tr.appendChild(td);
        }

        var status = arr[row][3]
        var earnings = 0.00
        if(status == "win") {
            var odds = arr[row][5];
            var betAmount = arr[row][4];
            earnings = betAmount * odds + betAmount;
            moneyArr.push(earnings);
        }
        else if(status == "loss"){
            var betAmount = arr[row][4];
            earnings = 0 - (betAmount);
            moneyArr.push(earnings);
        }

        td = document.createElement('td');
        tn = document.createTextNode(earnings);
        td.appendChild(tn);
        tr.appendChild(td);


        tab.appendChild(tr);
    }

    modifyChart(moneyArr);
}
</script>
