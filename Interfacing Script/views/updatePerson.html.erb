<div id = "content">
  <form name = "add" action="/performPersonUpdate" method="post" id = "form">
    Character Name (*mandatory): <br>
    <input type="text" name="charName">
    <br>
    Current Book Number (*mandatory): <br>
    <input type="text" name="bookNo">
    <br>
    House Name: <br>
    <input type="text" name="houseName">
    <br>
    Title: <br>
    <input type="text" name="title">
    <br>
    Is Alive (0 for dead, 1 for alive): <br>
    <input type="text" name="isAlive">
    <br>
    Likelihood of Death (decimal of form 0.ddd): <br>
    <input type="text" name="deathProb">
    <br>
    Popularity (decimal of form 0.dddddd or 1): <br>
    <input type="text" name="popularity">
    <br>

    <input type="submit" name = "submit">
  </form>

<script>
    function isPositiveInt(num) {
      return num != "" && num > 0 && !isNaN(num) && num % 1 == 0
    }

    var element = document.querySelector("form");
    element.addEventListener("submit", function(event) {
      var charName = document.forms["add"]["charName"].value;
      var bookNo = document.forms["add"]["bookNo"].value;

      if(charName == "" || !isNaN(charName)) {
        event.preventDefault();
        alert('Please enter a valid character name.');
      }
      if (!isPositiveInt(bookNo)) {
        event.preventDefault();
        alert('Book number must be a valid positive integer, try again.');
      }
    })
  </script>
